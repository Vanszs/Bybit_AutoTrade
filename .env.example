# ===============================
# REQUIRED SETTINGS
# ===============================

# Telegram Bot (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM API (Required for natural language)
ZAI_API_KEY=your_llm_api_key_here
ZAI_BASE_URL=https://api.novita.ai/openai

# ===============================
# OPTIONAL SETTINGS
# ===============================

# Bybit API (Optional - for private endpoints)
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_secret
BYBIT_PUBLIC_ONLY=true

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo
LLM_ROUTER_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7

BOT_AUTH_REQUIRED=false
BYBIT_TESTNET=false

# ===============================
# ADVANCED SETTINGS
# ===============================

# Multi-Exchange Settings
MULTI_EXCHANGE_ENABLED=true
DEFAULT_EXCHANGE=bybit
AVAILABLE_EXCHANGES=bybit,binance,kucoin,okx,huobi,mexc,indodax

# MCP Server Settings
MCP_ENABLED=true
API_DOCS_PATH=api-docs.txt
DEFAULT_CATEGORY=spot
MAX_API_RETRIES=3

# Auth Settings (if BOT_AUTH_REQUIRED=true)
BOT_AUTH_USERNAME=admin
BOT_AUTH_PASSWORD=admin123
BOT_AUTH_STORE=data/auth.json

# Environment
BYBIT_ENVIRONMENT=demo
LOG_LEVEL=INFO

# Enhanced Configuration
MCP_ENABLED=true
API_DOCS_PATH=api-docs.txt
DEFAULT_CATEGORY=spot
MAX_API_RETRIES=3
